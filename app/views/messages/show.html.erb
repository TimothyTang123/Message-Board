<h2><%=@message.title%></h2>
<p>Posted by <%= @message.user.email %> <%= time_ago_in_words(@message.created_at)%> ago</p>
<p><%=@message.description%></p>


<h3>Comments:</h3>
<%=render @message.comments%>

<h3>Reply to Message:</h3>
<%= render 'comments/form'%>

<%= link_to "Back", root_path %>
<% if user_signed_in? %>
  <% if @message.user_id == current_user.id %>
  <%= link_to "Edit Post", edit_message_path(@message) %>
  <%= link_to "Delete Post", message_path(@message), method: :delete, data: { confirm: "Are You Sure?" }%>
  <%end%>
<%end%>
